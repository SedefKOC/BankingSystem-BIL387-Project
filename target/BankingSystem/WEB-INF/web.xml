<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
         version="5.0">

    <display-name>BankingSystem</display-name>

    <!-- Default landing page until controllers forward elsewhere -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>DatabaseHealthServlet</servlet-name>
        <servlet-class>com.bankingsystem.controller.DatabaseHealthServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.bankingsystem.controller.LoginServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>AdminHomeServlet</servlet-name>
        <servlet-class>com.bankingsystem.controller.AdminHomeServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>CustomerHomeServlet</servlet-name>
        <servlet-class>com.bankingsystem.controller.CustomerHomeServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DatabaseHealthServlet</servlet-name>
        <url-pattern>/health/db</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AdminHomeServlet</servlet-name>
        <url-pattern>/admin/home</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>CustomerHomeServlet</servlet-name>
        <url-pattern>/customer/home</url-pattern>
    </servlet-mapping>

    <!-- We will register servlets via @WebServlet annotations or explicit mappings here as needed -->
</web-app>
