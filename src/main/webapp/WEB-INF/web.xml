<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
         version="5.0">

    <display-name>BankingSystem</display-name>

    <!-- Default landing page until controllers forward elsewhere -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>DatabaseHealthServlet</servlet-name>
        <servlet-class>com.bankingsystem.controller.DatabaseHealthServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.bankingsystem.controller.LoginServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>AdminHomeServlet</servlet-name>
        <servlet-class>com.bankingsystem.controller.AdminHomeServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>AdminCustomersServlet</servlet-name>
        <servlet-class>com.bankingsystem.controller.AdminCustomersServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>AdminAccountsServlet</servlet-name>
        <servlet-class>com.bankingsystem.controller.AdminAccountsServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>CustomerHomeServlet</servlet-name>
        <servlet-class>com.bankingsystem.controller.CustomerHomeServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>CustomerAccountsServlet</servlet-name>
        <servlet-class>com.bankingsystem.controller.CustomerAccountsServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>CustomerAccountDetailsServlet</servlet-name>
        <servlet-class>com.bankingsystem.controller.CustomerAccountDetailsServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>CustomerTransfersServlet</servlet-name>
        <servlet-class>com.bankingsystem.controller.CustomerTransfersServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>CustomerProfileServlet</servlet-name>
        <servlet-class>com.bankingsystem.controller.CustomerProfileServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>CustomerMarketServlet</servlet-name>
        <servlet-class>com.bankingsystem.controller.CustomerMarketServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DatabaseHealthServlet</servlet-name>
        <url-pattern>/health/db</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AdminHomeServlet</servlet-name>
        <url-pattern>/admin/home</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AdminHomeServlet</servlet-name>
        <url-pattern>/admin/dashboard</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AdminCustomersServlet</servlet-name>
        <url-pattern>/admin/customers</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AdminAccountsServlet</servlet-name>
        <url-pattern>/admin/accounts</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>CustomerHomeServlet</servlet-name>
        <url-pattern>/customer/home</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>CustomerAccountsServlet</servlet-name>
        <url-pattern>/customer/accounts</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>CustomerAccountDetailsServlet</servlet-name>
        <url-pattern>/customer/accounts/detail</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>CustomerTransfersServlet</servlet-name>
        <url-pattern>/customer/transfers</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>CustomerProfileServlet</servlet-name>
        <url-pattern>/customer/profile</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>CustomerMarketServlet</servlet-name>
        <url-pattern>/customer/market</url-pattern>
    </servlet-mapping>

    <!-- We will register servlets via @WebServlet annotations or explicit mappings here as needed -->
</web-app>
